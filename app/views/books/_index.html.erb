<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |books| %>
      <tr>
        <td><%= link_to user_path(books.user) do %>
          <%= attachment_image_tag books.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg" %>
          <% end %>
        </td>
        <td><%= link_to books.title, book_path(books), class: "books_#{books.id}" %></td>
        <td><%= books.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>